<form class="edit-form" onsubmit={{action "submitForm"}}>
	<div class="border border-dark rounded p-4 mb-4">
		<h4>Дата встречи</h4>
		<div class="row h-100 justify-content-between mb-4">
			<div class="col-md-auto">
				<div class="datepicker datepicker-meeting date input-group p-0">
          {{input type="date" placeholder="Дата..." value=dateOfMeeting}}
					{{!-- <input type="text" placeholder="Дата..." class="form-control" id="meetingDate" value=""> --}}
					<div class="input-group-append">
						<span class="input-group-text px-4">
							<svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-clock" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
								<path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm8-7A8 8 0 1 1 0 8a8 8 0 0 1 16 0z"/>
								<path fill-rule="evenodd" d="M7.5 3a.5.5 0 0 1 .5.5v5.21l3.248 1.856a.5.5 0 0 1-.496.868l-3.5-2A.5.5 0 0 1 7 9V3.5a.5.5 0 0 1 .5-.5z"/>
							</svg>
						</span>
					</div>
          {{#if (and isInvalid (v-get this 'dateOfMeeting' 'isInvalid'))}}
          <span class="col-sm-10">
            {{v-get this 'dateOfMeeting' 'message'}}
          </span>
          {{/if}}
				</div>
			</div>
		</div>
		<div class="row h-100 justify-content-between">
      {{!-- {{#if isCreating}} --}}
			<div class="col-md-auto">
				<h4>Список докладов</h4>
			</div>
      {{#link-to "create-review"}}
			<div class="col-md-auto">
				<button type="button" class="btn btn-edit">
					<svg viewBox="0 0 16 16" class="bi bi-plus-square card-button" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
						<path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
						<path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
					</svg>
				</button>
			</div>
      {{/link-to}}
      {{!-- {{/if}} --}}
		</div>
		<ul class="list-group">
      {{#each meeting.reviews as |review|}}
				<li class="list-group-item">
					<div class="row h-100 justify-content-between">
						<div class="col-md-2 text-center d-inline-block align-middle">
							<h5 class="py-2">Спикер</h5>
							<img src="{{env 'rootURL'}}images/speaker.jpg" class="rounded w-100" alt="Спикер">
							<p>{{review.speaker.lastName}} {{review.speaker.firstName}}</p>
						</div>
						<div class="col-md-2 text-center d-inline-block align-middle">
							<h5 class="py-2">Книга</h5>
							<p>{{review.book.title}}</p>
							<p>{{review.book.author}}</p>
							<div class="row align-items-center m-0">
								<div class="col-md-auto pl-0">
									Оценка:
								</div>
								<div class="col p-0">
									<div class="progress">
										<div class="progress-bar" role="progressbar" style="width: {{review.markBook}}%;" aria-valuenow={{review.markBook}} aria-valuemin="0" aria-valuemax="100">{{review.markBook}}%</div>
									</div>
								</div>
							</div>
						</div>
						<div class="col-md-4 d-inline-block align-middle">
							<h5 class="text-center py-2">Отзыв</h5>
							<p>
								{{review.report}}
							</p>
						</div>
						<div class="col-md-2 text-center col-filter d-inline-block align-middle">
							<h5 class="py-2">Ссылки</h5>
							<a href="#" class="btn btn-video" title="Посмотреть запись доклада">
								<svg viewBox="0 0 16 16" class="bi bi-camera-reels card-button" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
									<path fill-rule="evenodd" d="M0 8a2 2 0 0 1 2-2h7.5a2 2 0 0 1 1.983 1.738l3.11-1.382A1 1 0 0 1 16 7.269v7.462a1 1 0 0 1-1.406.913l-3.111-1.382A2 2 0 0 1 9.5 16H2a2 2 0 0 1-2-2V8zm11.5 5.175l3.5 1.556V7.269l-3.5 1.556v4.35zM2 7a1 1 0 0 0-1 1v6a1 1 0 0 0 1 1h7.5a1 1 0 0 0 1-1V8a1 1 0 0 0-1-1H2z"/>
									<path fill-rule="evenodd" d="M3 5a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
									<path fill-rule="evenodd" d="M9 5a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
								</svg>
							</a>
							<a href="#" class="btn btn-present" title="Скачать презентацию">
								<svg viewBox="0 0 16 16" class="bi bi-file-ppt card-button" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
									<path fill-rule="evenodd" d="M4 0h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2zm0 1a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H4z"/>
									<path fill-rule="evenodd" d="M6 4a.5.5 0 0 1 .5.5V12a.5.5 0 0 1-1 0V4.5A.5.5 0 0 1 6 4z"/>
									<path fill-rule="evenodd" d="M8.5 5a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-3 2a3 3 0 1 1 6 0 3 3 0 0 1-6 0z"/>
								</svg>
							</a>
						</div>
						<div class="row align-items-center col-md-2">
							<button type="button" class="btn pl-2 pr-2 col-md-6 text-right">{{review-item idReview=review.id}}</button>
							<button type="button" class="btn pl-2 pr-2 col-md-6 text-left" onclick={{action "deleteReview" review}}>
								<svg viewBox="0 0 16 16" class="bi bi-trash card-button" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
									<path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
									<path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
								</svg>
							</button>
						</div>
					</div>
				</li>
			{{/each}}
		</ul>
	</div>
	<div class="form-group row">
		<div class="col-12 text-right">
			<button type="submit" class="btn btn-primary btn-lg">Сохранить</button>
      {{#link-to "meeting" class="btn btn-outline-secondary btn-lg"}}
	      Отмена
      {{/link-to}}
		</div>
	</div>
</form>