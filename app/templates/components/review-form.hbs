<form class="edit-form" onsubmit={{action "submitForm"}}>
  <div class="form-group row">
		<label class="col-sm-2 col-form-label text-right">Дата</label>
		<div class="col-sm-10">
      {{#power-select searchEnabled=false selected=dateOfMeeting onchange=(action (mut dateOfMeeting)) as |meeting|}}
        {{meeting.dateOfMeeting}}
      {{/power-select}}
		</div>
	</div>
	<div class="form-group row">
		<label class="col-sm-2 col-form-label text-right">Спикер</label>
		<div class="col-sm-10">
      {{#power-select searchEnabled=true onchange=(action (mut speaker)) selected=speaker search=(action "searchSpeaker") as |speaker|}}
        {{speaker.lastName}} {{speaker.firstName}}
      {{/power-select}}
		</div>
	</div>
	<div class="form-group row">
		<label class="col-sm-2 col-form-label text-right">Книга</label>
		<div class="col-sm-10">
      {{#power-select searchEnabled=true onchange=(action (mut book)) selected=book search=(action "searchBook") as |book|}}
        {{book.title}}
      {{/power-select}}
		</div>
	</div>
	<div class="form-group row">
		<label class="col-sm-2 col-form-label text-right big">Оценка</label>
		<div class="col-sm-10">
      {{input type="text" placeholder="Введите оценку книге (0-100)" value=markBook class="form-control form-control-lg"}}
		</div>
	</div>
  <div class="form-group row">
		<label class="col-sm-2 col-form-label text-right big">Ссылка на видео</label>
		<div class="col-sm-10">
      {{input type="text" placeholder="Введите ссылку на видео" value=videoURL class="form-control form-control-lg"}}
		</div>
	</div>
  <div class="form-group row">
		<label class="col-sm-2 col-form-label text-right big">Ссылка на презентацию</label>
		<div class="col-sm-10">
      {{input type="text" placeholder="Введите ссылку на презентацию" value=presentationURL class="form-control form-control-lg"}}
		</div>
	</div>
  <div class="form-group row">
		<label class="col-sm-2 col-form-label text-right big">Отзыв</label>
		<div class="col-sm-10">
      {{input type="text" placeholder="Введите отзыв" value=report class="form-control form-control-lg"}}
		</div>
	</div>
	<div class="form-group row">
		<div class="col-12 text-right">
			<button type="submit" class="btn btn-primary btn-lg">Сохранить</button>
      {{#link-to "meeting" class="btn btn-outline-secondary btn-lg"}}
			  Отмена
      {{/link-to}}
		</div>
	</div>
</form>